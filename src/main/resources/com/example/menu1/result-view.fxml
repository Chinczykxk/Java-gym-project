<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ResultController" prefWidth="900" prefHeight="500">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <Label fx:id="lblPlanName" text="Twój Plan Treningowy"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>

    <TableView fx:id="tvExercises" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Ćwiczenie" prefWidth="250"/>
            <TableColumn fx:id="colSets" text="Serie" prefWidth="60"/>
            <TableColumn fx:id="colReps" text="Powt." prefWidth="80"/>
            <TableColumn fx:id="colProgression" text="System (Rampa/RIR)" prefWidth="120"/>
            <TableColumn fx:id="colIntensity" text="Intensywność" prefWidth="100"/>
            <TableColumn fx:id="colDifficulty" text="Trudność" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15;">
        <children>
            <Button text="Zapisz ten plan" onAction="#handleSaveAction"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30; -fx-cursor: hand;"/>

            <Button text="Powrót" onAction="#handleClose"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30; -fx-cursor: hand;"/>
        </children>
    </HBox>
</VBox>