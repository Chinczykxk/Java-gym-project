<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserPanelController">
    <children>
        <Label fx:id="welcomeLabel" layoutX="13.0" layoutY="14.0" prefHeight="30.0" prefWidth="80.0" text="Witaj!">
            <font><Font name="System Bold" size="18.0" /></font>
        </Label>

        <Label fx:id="dataLabel" layoutX="100.0" layoutY="14.0" prefHeight="30.0" prefWidth="320.0" text="Twoje dane pojawią się tutaj">
            <font><Font size="18.0" /></font>
        </Label>

        <Button fx:id="NewPlan" layoutX="14.0" layoutY="67.0" mnemonicParsing="false" onAction="#handleCreatePlan" prefHeight="85.0" prefWidth="114.0" text="Create a new plan" />
        <Button fx:id="SavePlans" layoutX="154.0" layoutY="67.0" mnemonicParsing="false" onAction="#handleSavedPlans" prefHeight="85.0" prefWidth="114.0" text="Saved plans" />

        <Button fx:id="MonitorButton" layoutX="14.0" layoutY="172.0" mnemonicParsing="false" onAction="#handleMonitorProgress" prefHeight="160.0" prefWidth="350.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc; -fx-border-radius: 5;" text="Monitor Progress">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Button>

        <HBox fx:id="finiszWorkout" layoutX="438.0" layoutY="14.0" prefHeight="30.0" prefWidth="135.0" spacing="5.0">
            <children>
                <Label fx:id="finishWorkutText" text="Streak:">
                    <font><Font size="18.0" /></font>
                </Label>
                <Label fx:id="finishWorkoutNumber" text="0">
                    <font><Font size="20.0" /></font>
                </Label>
                <ImageView fx:id="finiszWorkoutPng" fitHeight="31.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../photo/fire_1f525.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>

        <Button fx:id="DoneTreningButton" layoutX="438.0" layoutY="44.0" mnemonicParsing="false" onAction="#handleDoneTraining" prefHeight="25.0" prefWidth="114.0" text="Done Training" />

        <Button layoutX="21.0" layoutY="345.0" mnemonicParsing="false" onAction="#backToMenu" text="Wyloguj" />
    </children>
</AnchorPane>