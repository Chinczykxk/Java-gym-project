<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserPanelController">
    <children>
        <Label fx:id="welcomeLabel" layoutX="13.0" layoutY="14.0" prefHeight="30.0" prefWidth="66.0" text="Witaj!">
            <font><Font name="System Bold" size="18.0" /></font>
        </Label>
        <Label fx:id="dataLabel" layoutX="81.0" layoutY="14.0" prefHeight="30.0" prefWidth="273.0" text="Twoje dane pojawią się tutaj">
         <font>
            <Font size="18.0" />
         </font></Label>
        <Button layoutX="21.0" layoutY="345.0" mnemonicParsing="false" onAction="#backToMenu" text="Wyloguj" />
      <Button fx:id="NewPlan" layoutX="14.0" layoutY="67.0" mnemonicParsing="false" onAction="#handleCreatePlan" prefHeight="85.0" prefWidth="114.0" text="Creat a new plan" />
      <Button fx:id="SavePlans" layoutX="154.0" layoutY="67.0" mnemonicParsing="false" onAction="#handleSavedPlans" prefHeight="85.0" prefWidth="114.0" text="Saves plans" />
      <AreaChart fx:id="progressChart" layoutX="15.0" layoutY="172.0" prefHeight="146.0" prefWidth="227.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </AreaChart>
      <HBox fx:id="finiszWorkout" layoutX="438.0" layoutY="14.0" prefHeight="30.0" prefWidth="135.0">
         <children>
            <Label fx:id="finishWorkutText" prefHeight="27.0" prefWidth="60.0" text="Streak:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="finishWorkoutNumber" prefHeight="30.0" prefWidth="23.0" text="0">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <ImageView fx:id="finiszWorkoutPng" fitHeight="31.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../photo/fire_1f525.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <Button fx:id="DoneTreningButton" layoutX="438.0" layoutY="44.0" mnemonicParsing="false" onAction="#handleDoneTraining" prefHeight="25.0" prefWidth="114.0" text="Done Trening" />
    </children>
</AnchorPane>
