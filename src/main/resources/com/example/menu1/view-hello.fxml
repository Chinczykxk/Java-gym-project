<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox fx:id="myPane" alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="15.0"
      styleClass="main-container" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MeinController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Witaj w aplikacji" styleClass="welcome-text" />

    <VBox spacing="10" alignment="CENTER" styleClass="button-container">
        <Button fx:id="login" maxWidth="Infinity" onAction="#onClickButtonLogin"
                text="ZALOGUJ SIĘ" styleClass="btn, btn-login" />

        <Button fx:id="register" maxWidth="Infinity" onAction="#onClickButtonRegister"
                text="ZAREJESTRUJ SIĘ" styleClass="btn, btn-register" />

        <Separator style="-fx-padding: 10 0;" />

        <Button fx:id="exit" maxWidth="Infinity" onAction="#onClickButtonExit"
                text="WYJŚCIE" styleClass="btn, btn-exit" />
    </VBox>
</VBox>