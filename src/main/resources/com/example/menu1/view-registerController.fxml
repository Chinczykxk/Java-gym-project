<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="500.0" spacing="10.0"
      styleClass="main-container" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>
    <HBox alignment="TOP_RIGHT">
        <Button fx:id="back" onAction="#backToMenu" text="← Go Back" styleClass="btn-back" />
    </HBox>
    <Label text="Rejestracja" styleClass="header-label" />
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
        <VBox spacing="12.0" alignment="CENTER" maxWidth="350.0" style="-fx-padding: 10 0;">
            <VBox spacing="5.0">
                <Label text="Name:" />
                <TextField fx:id="nameRegister" promptText="Imię" />
            </VBox>
            <VBox spacing="5.0">
                <Label text="Surname:" />
                <TextField fx:id="surnameRegister" promptText="Nazwisko" />
            </VBox>
            <VBox spacing="5.0">
                <Label text="Nick:" />
                <TextField fx:id="nickRegister" promptText="Twoja ksywka" />
            </VBox>
            <VBox spacing="5.0">
                <Label text="Password:" />
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <PasswordField fx:id="passRegister" promptText="Hasło" HBox.hgrow="ALWAYS" />
                    <CheckBox fx:id="checkBoxv1Register" text="Show" styleClass="small-check" />
                </HBox>
            </VBox>
            <VBox spacing="5.0">
                <Label text="Repeat Password:" />
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <PasswordField fx:id="ageinpassRegister" promptText="Powtórz hasło" HBox.hgrow="ALWAYS" />
                    <CheckBox fx:id="checkBoxv2Register" text="Show" styleClass="small-check" />
                </HBox>
            </VBox>
            <Button fx:id="acceptRegistration" onAction="#handleRegister" text="Create Account"
                    maxWidth="Infinity" styleClass="btn-accept" />
            <Label fx:id="message" styleClass="error-label" wrapText="true" textAlignment="CENTER" />
        </VBox>
    </ScrollPane>
</VBox>